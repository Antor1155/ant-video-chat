    <title>ant Video Chat</title>

    <style>
        #video-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-auto-rows: 300px;
            gap: 20px;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            order: 2;
            box-sizing: border-box;
        }

        video.main{
            order: 1;
            border: 5px solid yellow;
        }
    </style>
</head>

<body>
    <div id="video-grid">
        <video id="myVideo" class="main" autoplay muted playsinline></video>
    </div>
</body>

